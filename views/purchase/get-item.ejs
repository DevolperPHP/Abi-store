<%- include("../layout/navbar") -%>
<script>
    Swal.fire({
        icon: 'info',
        title: 'Quantity',
        text: 'Enter the quantity of <%= data.name%> - <%= data.size%>',
        html: `<form action="/purchase/add/<%= data.id%>?_method=PUT" method="post">
    <input type="number" name="qty" style="border: none; width: 80%; border-bottom: 1px solid #000; margin-top: 20px;" name="qty" placeholder="Quantity">
    <br>    <br>
    <button style="border: none; background-color: #2e86ea; padding: 5px; margin-top: 30px; color: #fff; border-radius: 8px;">Confirm</button>
    <br>
</form>
<button onclick="window.location.href='/purchase'" style="border: none; background-color: ##f0ad4e; padding: 5px; margin-top: 30px; color: #000; border-radius: 8px;">Cancel</button>
`,
        showConfirmButton: false,
    })
</script>
<form action="/purchase/add/<%= data.id%>?_method=PUT" method="post">
    <input style="border: none; border-bottom: 1px solid #000; margin-top: 20px;" name="qty" placeholder="Quantity">
    <button style="border: none; background-color: #2e86ea; padding: 5px; margin-top: 30px; color: #fff; border-radius: 8px;">Confirm</button>
    <button style="border: none; background-color: ##f0ad4e; padding: 5px; margin-top: 30px; color: #000; border-radius: 8px;">Cancel</button>
</form>
    <div class="items"><br><br>

        <div class="cards">
            <% products.forEach(data=> {%>
                    <div class="card-made" onclick="window.location.href='/purchase/get/<%= data.id%>'">
                        <div class="item-image">
                            <img src="/upload/images/<%= data.image%>" alt="">
                        </div>
                        <p class="title">
                            <%= data.name%>
                        </p>
                        <div class="des">
                            <div class="item-color">
                                <p>Color : <div class="card-color" style="background-color: <%= data.color%>"></div></p>
                            </div>
                            <div class="item-size">
                                <p>Size : <%= data.size%></p>
                            </div>
                        </div>
    
                        <div class="price">
                            <p class="price-p">Price</p>
                            <p class="sell_price">Selling</p>
                        </div>
                        <div class="price">
                            <p class="price-p"><%= data.price%> IQD</p>
                            <p class="sell_price"><%= data.sell_price%> IQD</p>
                        </div>
                        <% if(data.colorName){%>
                            <div class="item-colorName">
                                <p>Color Name: <%= data.colorName%></p>
                            </div>
                        <%} %>
                    </div>
                <%}) %>
        </div>
    </div>

    <script src="/javascript/items.js"></script>
    <%- include("../layout/footer") -%>