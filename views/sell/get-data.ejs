<%- include("../layout/navbar") -%>

<% if(suc.length > 0) {%>
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Order confirmed',
            text: 'The order successfully confirmed'
        })
    </script>
<%}%>

<div class="get-sell">
    <p class="title">Order</p>
    <div class="info">
                <p>Name: <%= data.name%></p>
        <p>Phone Number: <%= data.phone%></p>
        <p>Address: <%= data.adress%></p>
        <p>Date: <%= data.Date%></p>
        <p>ID: <%= data.bid%></p>
        <p>User: <%= data.user%></p>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Image</th>
                <th>Name</th>
                <th>Size</th>
                <th>Color</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Type</th>
                <th>total</th>
                <% if(data.status == "pending"){%>
                <th>return</th>
                <%} %>
            </tr>
        </thead>
        <tbody>
            <% for (let i = 0; i < data.products.length; i++) {%>
                <tr>
                    <td><%= i+1%></td>
                    <td><img src="/upload/images/<%= data.products[i].image%>"></td>
                    <td><%= data.products[i].name%></td>
                    <td><%= data.products[i].size%></td>
                    <td><div class="color" style="background-color: <%= data.products[i].color%>"></div></td>
                    <td><%= data.products[i].price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%></td>
                    <td><%= data.products[i].qty%></td>
                    <td><%= data.products[i].type%></td>
                    <td><%= data.products[i].total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%></td>
                    <% if(data.status == "pending"){%>
                    <td><form action="/sell/return/<%= data.id%>/<%= data.products[i].id%>?_method=PUT" method="post">
                        <button class="btn btn-danger">Return</button>
                    </form></td>
                    <%} %>
                </tr>
            <%} %>
            <% if(data.total == ""){%>
                <tr>
                    <td colspan="10">Total: <%= total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD</td>
                </tr>
            <%} else {%>
                <tr>
                    <td colspan="10">Total: <%= data.total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD - Discount <%= (Number(total) - Number(data.total)).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD</td>
                </tr>
            <%} %>
        </tbody>
    </table>
    <div>
        <p class="note"><%= data.note%></p>
    </div>

    <div class="flex btns">
        <button class="btn btn-primary" onclick="window.location.href='/sell/edit/<%= data.id%>'">Edit</button>
        <button class="btn btn-warning" onclick="window.location.href='/sell/bill/<%= data.id%>'">Print</button>
        <% if(data.status == "pending"){%>
            <form action="/sell/status/confirm/<%= data.id%>?_method=PUT" method="post">
                <button class="btn btn-primary">Confirm</button>
            </form>
            <%} %>
    </div>
</div>

<%- include("../layout/footer") -%>